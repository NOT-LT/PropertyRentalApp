<%- layout('layout/boilerplate') %>
  <div class="flex flex-col max-w-screen-lg items-center mx-auto justify-center">
    <div
      class="flex flex-col md:mx-auto md:flex-row border shadow-lg rounded-lg overflow-hidden justify-center items-start md:relative min-w-full">
      <div class="w-full md:w-5/12 flex-shrink-0">
        <div class="aspect-w-1 aspect-h-1">
          <img src="<%= property.image %>" alt="<%= property.title %>"
            class="object-cover w-full h-full rounded-t-lg md:rounded-none md:rounded-l-lg" />
        </div>
      </div>
      <section class="flex flex-col p-4 flex-grow w-full">
        <h1 class="text-2xl font-bold truncate mb-2">
          <%= property.title %>
        </h1>
        <div class="flex items-center space-x-1 text-gray-600 mb-4">
          <svg width="20px" height="20px" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd"
              d="M12 10c-1.104 0-2-.896-2-2s.896-2 2-2 2 .896 2 2-.896 2-2 2m0-5c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3m-7 2.602c0-3.517 3.271-6.602 7-6.602s7 3.085 7 6.602c0 3.455-2.563 7.543-7 14.527-4.489-7.073-7-11.072-7-14.527m7-7.602c-4.198 0-8 3.403-8 7.602 0 4.198 3.469 9.21 8 16.398 4.531-7.188 8-12.2 8-16.398 0-4.199-3.801-7.602-8-7.602" />
          </svg>
          <p class="text-gray-600">
            <%= property.location %>
          </p>
        </div>
        <% if (property.description) { %>
          <p class="text-sm text-gray-600 mb-4 mt-2">
            <%= property.description %>
          </p>
          <% } else { %>
            <p class="text-sm text-gray-600 mb-4 mt-2">
              No description available.
            </p>
            <% } %>



              <div
                class="bg-green-900 rounded-3xl opacity-95 text-gray-100 p-2 text-center text-sm w-6/12 mx-auto md:self-center md:absolute md:bottom-2 md:w-4/12">
                <p>
                  <%= property.price %> BHD/month
                </p>
              </div>
      </section>
    </div>

    <div class="flex flex-row self-start gap-2 mt-4">
      <a class="bg-sky-900 rounded-lg hover:bg-sky-800 transition-all duration-150 text-white max-w-fit px-5 py-2"
        href="/properties/<%= property.id %>/edit">
        Edit
      </a>
      <form action="/properties/<%= property.id %>?_method=DELETE" method="POST">
        <button
          class="bg-red-800 rounded-lg hover:bg-red-700 transition-all duration-150 text-white max-w-fit px-5 py-2">
          Delete
        </button>
      </form>
    </div>
    <hr class="w-full bg-gray-200 my-8 h-px border-0">

  </div>

