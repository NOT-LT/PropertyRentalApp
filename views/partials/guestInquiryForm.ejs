<form id="inquiryForm" class="w-full space-y-4" data-property-id="<%= property.id%>" method="POST">
  <div>
    <label for="inquiryTitle" class="block text-sm font-medium text-gray-600">Title</label>
    <input type="text" id="inquiryTitle" name="inquiry[title]"
      class="block w-full mt-1 p-2 border border-gray-300 rounded-md shadow-sm focus:ring-cyan-500 focus:border-cyan-500 outline-0"
      placeholder="Write your message title here" required>
  </div>
  <div>
    <label for="inquiryFullName" class="block text-sm font-medium text-gray-600">Full Name</label>
    <input type="text" id="inquiryFullName" name="inquiry[fullName]"
      class="block w-full mt-1 p-2 border border-gray-300 rounded-md shadow-sm focus:ring-cyan-500 focus:border-cyan-500 outline-0"
      placeholder="Enter your full name" required>
  </div>
<div>
  <label for="inquiryEmail" class="block text-sm font-medium text-gray-600">Email</label>
  <input type="email" id="inquiryEmail" name="inquiry[email]"
    class="block w-full mt-1 p-2 border border-gray-300 rounded-md shadow-sm focus:ring-cyan-500 focus:border-cyan-500 outline-0"
    placeholder="Enter your email" required>
</div>
<div>
  <label for="inquiryPhoneNumber" class="block text-sm font-medium text-gray-600">Phone Number</label>
  <input type="tel" id="inquiryPhoneNumber" name="inquiry[phoneNumber]"
    class="block w-full mt-1 p-2 border border-gray-300 rounded-md shadow-sm focus:ring-cyan-500 focus:border-cyan-500 outline-0"
    placeholder="Enter your mobile number" required>
</div>
<div>
  <label for="inquiryMsg" class="block text-sm font-medium text-gray-600">Message</label>
  <textarea id="inquiryMsg" name="inquiry[body]" rows="3"
    class="block w-full mt-1 p-2 border border-gray-300 rounded-md shadow-sm focus:ring-cyan-500 focus:border-cyan-500 outline-0"
    placeholder="Write your message here" required></textarea>
</div>
<button type="submit"
  class="w-auto py-2 px-6 bg-cyan-600 text-white font-semibold rounded-md shadow-md hover:bg-cyan-700 focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2">
  Submit
</button>
</form>